<div class="page-content">
    <div class="panel panel-primary" style="padding: 1px">
        <div class="panel-heading">
            <h2 class="panel-title">todo list</h2>
        </div>
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-strong">

            <th>id</th>
            <th>desc</th>
            <th>createdAt</th>
            <th>modifiedAt</th>
            <th>doneAt</th>
            <th>edit</th>

            </thead>

            <tbody>
            {{#each todoList}}
                <tr>
                    <td class="text-center">{{this.id}}</td>
                    <td class="text-center">{{this.desc}} {{this.linkList}}</td>
                    <td class="text-center">{{this.createdAt}}</td>
                    <td class="text-center">{{this.modifiedAt}}</td>
                    {{#if this.done}}
                        <td class="text-center">{{this.doneAt}}</td>
                    {{else}}
                        <td>
                            <button type="button" class="btn btn-primary btn-done" data-id="{{this.id}}">완료 처리</button>
                        </td>
                    {{/if}}
                    <td>
                        <div>
                            {{> todo/edittodo}}
                        </div>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    {{> pagination}}
</div>
