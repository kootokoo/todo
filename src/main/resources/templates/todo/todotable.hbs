<div class="panel panel-primary" style="padding: 1px">
    <div class="panel-heading">
        <h2 class="panel-title">todo list</h2>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-strong">

        <th>id</th>
        <th>description</th>
        <th>createdAt</th>
        <th>modifiedAt</th>
        <th>doneAt</th>
        <th>edit</th>

        </thead>

        <tbody>
        {{#each todoList}}
            <tr>
                <td class="text-center">{{this.id}}</td>
                <td class="text-center">{{this.description}}</td>
                <td class="text-center">{{this.createdAt}}</td>
                <td class="text-center">{{this.modifiedAt}}</td>
                {{#if this.isDone}}
                    <td class="text-center">{{this.doneAt}}</td>
                {{else}}
                    <td>
                        <button type="button" class="btn btn-primary" id="btn-done" data-id="{{this.id}}">완료 처리</button>
                    </td>
                {{/if}}
                <td>
                    {{> todo/edittodo}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>